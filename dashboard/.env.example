# ============================================
# Dashboard Environment Configuration
# NEVER commit the real .env file!
# ============================================

# Application
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dashboard

# Redis (for sessions, rate limiting, queues)
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING_PRODUCTION
ACCESS_TOKEN_EXP=15m
REFRESH_TOKEN_EXP=7d

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Security
TRUST_PROXY=false
API_KEY_PEPPER=CHANGE_THIS_RANDOM_PEPPER_STRING

# Micro-Survey Integration
MICROSURVEY_BASE_URL=http://localhost:4000
MICROSURVEY_API_KEY=mock_api_key_for_local_dev
MICROSURVEY_TIMEOUT_MS=5000
MICROSURVEY_RETRY_ATTEMPTS=3
MICROSURVEY_CIRCUIT_BREAKER_THRESHOLD=5
MICROSURVEY_CIRCUIT_BREAKER_TIMEOUT=60000

# Feature Flags
USE_MOCK_MICROSURVEY=true
ENABLE_WEBHOOKS=true

# Worker Configuration
QUEUE_CONCURRENCY=5
QUEUE_PREFIX=dashboard

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
