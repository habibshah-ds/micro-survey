# Colors
GREEN=\033[0;32m
YELLOW=\033[1;33m
RED=\033[0;31m
NC=\033[0m

docker-up: ## Start all services with Docker
	@echo "$(GREEN)ğŸ³ Starting Docker services...$(NC)"
	docker compose up -d
	@echo "$(YELLOW)â³ Waiting for services to be healthy...$(NC)"
	@docker compose ps
	@sleep 8
	@echo "$(GREEN)âœ… Services started!$(NC)"
	@$(MAKE) migrate

docker-down: ## Stop all Docker services
	@echo "$(YELLOW)ğŸ›‘ Stopping Docker services...$(NC)"
	docker compose down
	@echo "$(GREEN)âœ… Services stopped!$(NC)"

docker-build: ## Build Docker images
	@echo "$(GREEN)ğŸ”¨ Building Docker images...$(NC)"
	docker compose build
	@echo "$(GREEN)âœ… Build complete!$(NC)"

docker-restart: ## Restart Docker services
	@echo "$(YELLOW)ğŸ” Restarting Docker services...$(NC)"
	docker compose down
	docker compose up -d
	@echo "$(GREEN)âœ… Restart complete!$(NC)"
